<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tab1">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tab1_time"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tab1_distance"
        android:layout_marginTop="74dp"
        android:text="Time"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tab1_distance"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:text="Distance"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tab1_pace"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tab1_time"
        android:layout_marginBottom="153dp"
        android:text="TextView"
        android:textSize="30dp" />

    <Spinner
        android:id="@+id/tab1_distance_spinner"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="37dp"
        android:entries="@array/tab1_units" />

    <Button
        android:id="@+id/tab1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:text="Button" />

</RelativeLayout>